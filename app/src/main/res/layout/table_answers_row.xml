<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/table_answers_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_green"
    app:columnCount="6"
    app:orientation="vertical">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/dark_green"
        android:orientation="vertical"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_gravity="fill">

        <TextView
            android:id="@+id/task_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Номер задания"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/dark_green"
        android:orientation="vertical"
        app:layout_row="0"
        app:layout_column="1"
        app:layout_gravity="fill">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/dark_green"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/right_answer_input"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/dark_green"
        android:orientation="vertical"
        app:layout_row="0"
        app:layout_column="2"
        app:layout_gravity="fill">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/dark_green"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <EditText
                    android:id="@+id/points_input"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/dark_green"
        android:orientation="vertical"
        app:layout_row="0"
        app:layout_column="3"
        app:layout_gravity="fill">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/dark_green"
            android:orientation="vertical">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/order_matters_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:buttonIconTint="@color/white"
                app:buttonTint="@color/light_green" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/dark_green"
        android:orientation="vertical"
        app:layout_row="0"
        app:layout_column="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="45dp"
                    android:background="@color/dark_green"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/check_method_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@drawable/spinner_background"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/complex_grading_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/light_green"
                android:visibility="gone"
                app:columnCount="1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_complex_grading_table_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/light_green"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/plus"
                            app:tint="@color/white" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/light_green"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/minus"
                            app:tint="@color/white" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.gridlayout.widget.GridLayout>